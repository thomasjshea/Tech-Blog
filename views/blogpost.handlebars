<div class="text-center">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>
    {{#if logged_in}}
    <div>
        <h3>Leave a Comment:</h3>
        <form class="form new-comment-form">
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-input" id="comment-input" name="comment"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Leave Comment</button>
            </div>
        </form>
    </div>
    {{/if}}


    {{#if comments.length}}
    <div class="col-md-6 comment-list">
        <h3>Comments:</h3>
        {{#each comments as |comment|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <p>{{comment.content}}</p>
                <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>